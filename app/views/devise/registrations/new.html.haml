= render "signup/form-header"
.registration-contents
  .registration-contents__section
    .registration-contents__section--title
      %h2 新規会員登録
    .registration-contents__section--maine
      .registration-contents__section--maine--btn
        .registration-contents__section--maine--btn--mail
          .registration-contents__section--maine--btn--mail--box.clearfix
            %i.far.fa-envelope.fa-lg.mail
            = link_to "メールアドレスで登録する", signup_step1_users_path, class:"mail-text"
        .registration-contents__section--maine--btn--facebook
          .registration-contents__section--maine--btn--facebook--box.clearfix
            %i.fab.fa-facebook-square.fa-2x.facebook
            = link_to "Facebookで登録する", "#", class:"facebook-text"
        .registration-contents__section--maine--btn--google
          .registration-contents__section--maine--btn--google--box.clearfix
            %i.fab.fa-google.fa-lg.google
            = link_to "Googleで登録する", "#", class:"google-text"
= render 'signup/form-footer'