= render "form-header"
.signup-form
  .signup-form__container
    %h2.signup-form__container__title
      住所入力
    .signup-form__container__main
      .signup-form__container__inner
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text 
              お名前
            %span.signup-form__container__inner__form__pack-label__required-i 
              必須
          %input.signup-form__container__inner__form__field{name: "last_name", placeholder:  "例）山田", type: "text"}
          %input.signup-form__container__inner__form__field{name: "name", placeholder:  "例）彩", type: "text"}
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text 
              お名前カナ
            %span.signup-form__container__inner__form__pack-label__required-i 
              必須
          %input.signup-form__container__inner__form__field{name: "last_name_f", placeholder:  "例）ヤマダ", type: "text"}
          %input.signup-form__container__inner__form__field{name: "name_f", placeholder:  "例）アヤ", type: "text"}
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text 
              郵便番号
            %span.signup-form__container__inner__form__pack-label__required-i 
              必須
          %input.signup-form__container__inner__form__field{name: "postal_code", placeholder:  "例）123-4567", type: "text"}
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text 
              都道府県
            %span.signup-form__container__inner__form__pack-label__required-i  
              必須
          = render "prefecture"
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text 
              市区町村
            %span.signup-form__container__inner__form__pack-label__required-i 
              必須
          %input.signup-form__container__inner__form__field{name: "city", placeholder:  "例）横浜市緑区", type: "text"}
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text 
              番地
            %span.signup-form__container__inner__form__pack-label__required-i 
              必須
          %input.signup-form__container__inner__form__field{name: "address", placeholder:  "例）青山1-1-1", type: "text"}
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text  
              建物名
            %span.signup-form__container__inner__form__pack-label__required-i--gray
              任意
          %input.signup-form__container__inner__form__field{name: "building_name", placeholder:  "例）柳ビル103", type: "text"}
        .signup-form__container__inner__form
          .signup-form__container__inner__form__pack-label
            %span.signup-form__container__inner__form__pack-label__text  
              電話
            %span.signup-form__container__inner__form__pack-label__required-i--gray
              任意
          %input.signup-form__container__inner__form__field{name: "phone_number", placeholder:  "例）09012345678", type: "text"}
        %button.signup-form__container__inner__submit{type: "submit"}
          次へ進む


